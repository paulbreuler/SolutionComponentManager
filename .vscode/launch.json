    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests - All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/tests/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests - Commands",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/tests/**/Command.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests - Heap",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/tests/**/Heap.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "AddSolutionComponent",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["AddSolutionComponent", "--solutionUniqueName","Test", "--componentId", "70816501-edb9-4740-a16c-6a5efbc05d84", "--componentType","1" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "GetSolutionComponents",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["GetSolutionComponents", "Test"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "GetSolutionComponentsSummaries",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["GetSolutionComponentsSummaries", "496c3d5b-7b5a-eb11-a812-000d3a8c9261"]
        }
    ]
}