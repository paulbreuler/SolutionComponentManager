{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/tests/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "AddSolutionComponent",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["AddSolutionComponent", "--solutionUniqueName","CORE", "--componentId", "e79e7977-de99-ea11-a811-000d3a579cbc", "--componentType","1" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "GetSolutionComponents",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["GetSolutionComponents", "core"]
        }
    ]
}